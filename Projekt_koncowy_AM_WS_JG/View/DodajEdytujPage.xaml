<UserControl x:Class="Projekt_koncowy_AM_WS_JG.View.DodajEdytujPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignHeight="500" d:DesignWidth="700" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Przyciski Dodaj/Wyloguj -->
            <RowDefinition Height="*"/>
            <!-- Główna część: formularz książki -->
            <RowDefinition Height="Auto"/>
            <!-- Taby: autor / wydawnictwo -->
        </Grid.RowDefinitions>

        <!-- Górny pasek z przyciskami -->
        <DockPanel Margin="10" HorizontalAlignment="Stretch" LastChildFill="False" Grid.Row="0">
            <Button Content="Dodaj/Edytuj"
                    Width="130" Height="30"
                    Background="#4CAF50" Foreground="White"
                    FontWeight="Bold"
                    Click="Dodaj_Click"
                    Margin="0,0,10,0"
                    DockPanel.Dock="Left"
                    Cursor="Hand"/>
            <Button Content="Wróć"
                    Width="130" Height="30"
                    Background="#4CAF50" Foreground="White"
                    FontWeight="Bold"
                    Click="Wroc_Click"
                    Margin="0,0,10,0"
                    DockPanel.Dock="Left"
                    Cursor="Hand"/>
        </DockPanel>

        <!-- Formularz dodawania książki -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="30" Grid.Row="1">
            <StackPanel Orientation="Vertical" MaxWidth="800" HorizontalAlignment="Center">

                <!-- Okładka -->
                <DockPanel Margin="0,0,0,20">
                    <StackPanel Width="200" Height="300" Margin="0,0,20,0" VerticalAlignment="Top">
                        <Border CornerRadius="8" Background="#f0f0f0">
                            <Image x:Name="OkladkaImage" Stretch="UniformToFill" Margin="5"/>
                        </Border>
                        <Button Content="Dodaj okładkę" Margin="0,10,0,0" Click="DodajOkladke_Click"/>
                    </StackPanel>

                    <!-- Dane książki -->
                    <StackPanel Orientation="Vertical" VerticalAlignment="Top" Width="400">
                        <TextBlock Text="Tytuł" FontWeight="Bold"/>
                        <TextBox x:Name="TytulBox" Margin="0,5,0,10"/>

                        <TextBlock Text="Autor" FontWeight="Bold"/>
                        <TextBox x:Name="AutorBox" Margin="0,5,0,10"/>

                        <TextBlock Text="Wydawnictwo" FontWeight="Bold"/>
                        <TextBox x:Name="WydawnictwoBox" Margin="0,5,0,10"/>

                        <TextBlock Text="Gatunek" FontWeight="Bold"/>
                        <TextBox x:Name="GatunekBox" Margin="0,5,0,10"/>

                        <TextBlock Text="Liczba stron" FontWeight="Bold"/>
                        <TextBox x:Name="StronyBox" Margin="0,5,0,10"/>

                        <TextBlock Text="Rok wydania" FontWeight="Bold"/>
                        <TextBox x:Name="RokBox" Margin="0,5,0,10"/>

                        <TextBlock Text="Język" FontWeight="Bold"/>
                        <TextBox x:Name="JezykBox" Margin="0,5,0,10"/>

                        <TextBlock Text="IDAutora" FontWeight="Bold"/>
                        <TextBox x:Name="IDAutoraBox" Margin="0,5,0,10"/>

                        <TextBlock Text="IDWydawnictwa" FontWeight="Bold"/>
                        <TextBox x:Name="IDWydawnictwaBox" Margin="0,5,0,10"/>
                    </StackPanel>
                </DockPanel>

                <!-- Opis książki -->
                <TextBlock Text="Opis" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                <TextBox x:Name="OpisBox" TextWrapping="Wrap" AcceptsReturn="True" Height="150" VerticalScrollBarVisibility="Auto" />
            </StackPanel>
        </ScrollViewer>

        <!-- Zakładki: Dodaj autora / Dodaj wydawnictwo -->
        <TabControl Grid.Row="2" Margin="10,20,10,10">
            <!-- Zakładka: Dodaj autora -->
            <TabItem Header="Dodaj autora">
                <StackPanel Margin="10">
                    <TextBlock Text="Imię" />
                    <TextBox x:Name="ImieAutoraBox" Margin="0,5,0,10"/>

                    <TextBlock Text="Nazwisko" />
                    <TextBox x:Name="NazwiskoAutoraBox" Margin="0,5,0,10"/>

                    <TextBlock Text="Rok urodzenia" />
                    <TextBox x:Name="RokUrodzeniaBox" Margin="0,5,0,10"/>

                    <TextBlock Text="Kraj pochodzenia" />
                    <TextBox x:Name="KrajAutoraBox" Margin="0,5,0,10"/>

                    <Button Content="Dodaj autora"
                            Background="#4CAF50"
                            Foreground="White"
                            FontWeight="Bold"
                            Width="120"
                            Click="DodajAutora_Click"/>
                </StackPanel>
            </TabItem>

            <!-- Zakładka: Dodaj wydawnictwo -->
            <TabItem Header="Dodaj wydawnictwo">
                <StackPanel Margin="10">
                    <TextBlock Text="Nazwa" />
                    <TextBox x:Name="NazwaWydawnictwaBox" Margin="0,5,0,10"/>

                    <TextBlock Text="Kraj założenia" />
                    <TextBox x:Name="KrajWydawnictwaBox" Margin="0,5,0,10"/>

                    <TextBlock Text="Rok założenia" />
                    <TextBox x:Name="RokZalozeniaBox" Margin="0,5,0,10"/>

                    <Button Content="Dodaj wydawnictwo"
                            Background="#4CAF50"
                            Foreground="White"
                            FontWeight="Bold"
                            Width="150"
                            Click="DodajWydawnictwo_Click"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
