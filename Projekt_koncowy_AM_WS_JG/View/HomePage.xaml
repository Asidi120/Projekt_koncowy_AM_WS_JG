<UserControl x:Class="Projekt_koncowy_AM_WS_JG.View.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projekt_koncowy_AM_WS_JG.View"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="700">
    <UserControl.Resources>
        <DataTemplate x:Key="KsiazkaTemplate">
            <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Width="150">
                <StackPanel>
                    <Image Source="{Binding Okladka}" Height="175" Stretch="UniformToFill"/>
                    <TextBlock Text="{Binding Tytul}"
                           FontWeight="Bold"
                           Foreground="Blue"
                           Cursor="Hand"
                           TextWrapping="Wrap"
                           MouseLeftButtonDown="Tytul_Click"/>
                    <TextBlock Text="{Binding Autor}" FontStyle="Italic"/>
                </StackPanel>
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <TabControl TabStripPlacement="Bottom">

            <TabItem Header="Strona Główna" Width="174" HorizontalAlignment="Left">
                <Grid Background="#FFE5E5E5">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="KsiazkiControl2">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Szukaj" Width="174">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <!-- Strzałka w lewo -->
                        <ColumnDefinition Width="*"/>
                        <!-- Lista książek -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Strzałka w prawo -->
                    </Grid.ColumnDefinitions>

                    <!-- Strzałka w lewo -->
                    <Button Grid.Column="0" Content="←" Width="40" Click="ScrollLeft_Click"/>

                    <!-- Lista książek -->
                    <ScrollViewer x:Name="BookScrollViewer" Grid.Column="1"
                      HorizontalScrollBarVisibility="Hidden"
                      VerticalScrollBarVisibility="Disabled">
                        <ItemsControl x:Name="KsiazkiControl"
                          ItemTemplate="{StaticResource KsiazkaTemplate}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Strzałka w prawo -->
                    <Button Grid.Column="2" Content="→" Width="40" Click="ScrollRight_Click"/>
                    </Grid>
            </TabItem>
            <TabItem Header="Moje Książki" Width="174">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
            <TabItem Header="Mój Profil" Width="174" >
                <Grid Background="#FFE5E5E5">
                    <Button Content="Wyloguj" HorizontalAlignment="Left" Margin="281,297,0,0" VerticalAlignment="Top" Click="WylogujKlikniete"/>
                </Grid>
            </TabItem>
        </TabControl>


    </Grid>
</UserControl>
