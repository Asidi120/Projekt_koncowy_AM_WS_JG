<UserControl x:Class="Projekt_koncowy_AM_WS_JG.View.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projekt_koncowy_AM_WS_JG.View"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="700">
    <UserControl.Resources>
        <DataTemplate x:Key="KsiazkaTemplate">
            <Border BorderBrush="Gray" BorderThickness="1" Margin="3" Width="120" Height="175">
                <StackPanel>
                    <Image Source="{Binding Okladka}" Height="140" Stretch="UniformToFill"/>
                    <TextBlock Text="{Binding Tytul}"
                       FontWeight="Bold"
                       Foreground="Blue"
                       FontSize="12"
                       TextTrimming="CharacterEllipsis"
                       TextWrapping="NoWrap"
                       Cursor="Hand"
                       HorizontalAlignment="Center"
                       MouseLeftButtonDown="Tytul_Click"/>
                    <TextBlock Text="{Binding Autor}" 
                       FontStyle="Italic"
                       FontSize="11"
                       HorizontalAlignment="Center"
                       TextTrimming="CharacterEllipsis"
                       Cursor="Hand"
                       MouseLeftButtonDown="Autor_Click"/>
                </StackPanel>
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <TabControl TabStripPlacement="Bottom">

            <TabItem Header="Strona Główna" Width="174" HorizontalAlignment="Left">
                <Grid Background="#FFE5E5E5" Margin="5,5,10,0">
                    <StackPanel Margin="10,0,10,0">
                        <!-- Sekcja 1: Najpopularniejsze -->
                        <TextBlock Text="Najpopularniejsze:" FontSize="16" FontWeight="Bold" Margin="0,5,0,5"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Strzałka w lewo -->
                            <Button Grid.Column="0" Content="←" Width="40" Height="175" Click="ScrollLeft_Click"/>
                            <!-- ScrollViewer z książkami -->
                            <ScrollViewer x:Name="BookScrollViewer"
                              Grid.Column="1"
                              HorizontalScrollBarVisibility="Hidden"
                              VerticalScrollBarVisibility="Disabled">
                                <ItemsControl x:Name="KsiazkiControl" ItemTemplate="{StaticResource KsiazkaTemplate}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </ScrollViewer>
                            <!-- Strzałka w prawo -->
                            <Button Grid.Column="2" Content="→" Width="40" Height="175" Click="ScrollRight_Click"/>
                        </Grid>

                        <!-- Sekcja 2: Najnowsze -->
                        <TextBlock Text="Najnowsze:" FontSize="16" FontWeight="Bold" Margin="0,5,0,5"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Strzałka w lewo -->
                            <Button Grid.Column="0" Content="←" Width="40" Height="175" Click="ScrollLeft1_Click"/>
                            <!-- ScrollViewer z książkami -->
                            <ScrollViewer x:Name="BookScrollViewer2"
                              Grid.Column="1"
                              HorizontalScrollBarVisibility="Hidden"
                              VerticalScrollBarVisibility="Disabled">
                                <ItemsControl x:Name="KsiazkiControl2" ItemTemplate="{StaticResource KsiazkaTemplate}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </ScrollViewer>
                            <!-- Strzałka w prawo -->
                            <Button Grid.Column="2" Content="→" Width="40" Height="175" Click="ScrollRight1_Click"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Szukaj" Width="174">
                <Grid Background="#FFE5E5E5" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Pole wyszukiwania -->
                    <TextBox x:Name="SearchTextBox"
                 Grid.Row="0"
                 Margin="0,0,0,10"
                 Height="30"
                 
                 FontSize="14"
                 TextChanged="SearchTextBox_TextChanged"
                 ToolTip="Wyszukaj książkę..."/>

                    <!-- Lista wyników w WrapPanel z maks 4 książkami w wierszu -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="SearchResultsControl" >
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" ItemWidth="155" ItemHeight="185" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Gray" BorderThickness="1" Margin="8" Width="155" Height="175" Background="White" >
                                        <StackPanel>
                                            <Image Source="{Binding Okladka}" Height="140"/>
                                            <TextBlock Text="{Binding Tytul}"
                                           FontWeight="Bold"
                                           Foreground="Blue"
                                           FontSize="12"
                                           TextTrimming="CharacterEllipsis"
                                           TextWrapping="NoWrap"
                                           HorizontalAlignment="Center"
                                           MouseLeftButtonDown="Tytul_Click"/>
                                            <TextBlock Text="{Binding Autor}" 
                                           FontStyle="Italic"
                                           FontSize="11"
                                           HorizontalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"
                                           x:Name="AutorDane"
                                           Cursor="Hand"
                                           MouseLeftButtonDown="Autor_Click"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Moje Książki" Width="174" HorizontalAlignment="Left">
                <!-- Główny ScrollViewer obejmuje cały Grid (przewijanie pionowe) -->
                <ScrollViewer  x:Name="MainScrollViewer" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <Grid Background="#FFE5E5E5" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Sekcja 1: Chcę Przeczytać -->
                        <StackPanel Grid.Row="0" Margin="0,10">
                            <TextBlock Text="Chcę Przeczytać" FontWeight="Bold" FontSize="16" Margin="10,0"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0" Content="←" Width="40" Height="175" Click="ScrollLeft_ChcePrzeczytac"/>
                                <ScrollViewer x:Name="ChcePrzeczytacScrollViewer" Grid.Column="1" PreviewMouseWheel="HorizontalScrollViewer_PreviewMouseWheel"
                                  HorizontalScrollBarVisibility="Hidden"
                                  VerticalScrollBarVisibility="Disabled">
                                    <ItemsControl x:Name="ChcePrzeczytacControl"
                                      ItemTemplate="{StaticResource KsiazkaTemplate}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </ScrollViewer>
                                <Button Grid.Column="2" Content="→" Width="40" Height="175" Click="ScrollRight_ChcePrzeczytac"/>
                            </Grid>
                        </StackPanel>

                        <!-- Sekcja 2: Przeczytane -->
                        <StackPanel Grid.Row="1" Margin="0,10">
                            <TextBlock Text="Przeczytane" FontWeight="Bold" FontSize="16" Margin="10,0"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0" Content="←" Width="40" Height="175" Click="ScrollLeft_Przeczytane"/>
                                <ScrollViewer x:Name="PrzeczytaneScrollViewer" Grid.Column="1"
                                  HorizontalScrollBarVisibility="Hidden" PreviewMouseWheel="HorizontalScrollViewer_PreviewMouseWheel"
                                  VerticalScrollBarVisibility="Disabled">
                                    <ItemsControl x:Name="PrzeczytaneControl"
                                      ItemTemplate="{StaticResource KsiazkaTemplate}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </ScrollViewer>
                                <Button Grid.Column="2" Content="→" Width="40" Height="175" Click="ScrollRight_Przeczytane"/>
                            </Grid>
                        </StackPanel>

                        <!-- Sekcja 3: W trakcie -->
                        <StackPanel Grid.Row="2" Margin="0,10">
                            <TextBlock Text="W trakcie" FontWeight="Bold" FontSize="16" Margin="10,0"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0" Content="←" Width="40" Height="175" Click="ScrollLeft_WTrakcie"/>
                                <ScrollViewer x:Name="WTrakcieScrollViewer" Grid.Column="1"
                                  HorizontalScrollBarVisibility="Hidden" PreviewMouseWheel="HorizontalScrollViewer_PreviewMouseWheel"
                                  VerticalScrollBarVisibility="Disabled">
                                    <ItemsControl x:Name="WTrakcieControl"
                                      ItemTemplate="{StaticResource KsiazkaTemplate}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </ScrollViewer>
                                <Button Grid.Column="2" Content="→" Width="40" Height="175" Click="ScrollRight_WTrakcie"/>
                            </Grid>
                        </StackPanel>

                        <!-- Sekcja 4: Porzucone -->
                        <StackPanel Grid.Row="3" Margin="0,10">
                            <TextBlock Text="Porzucone" FontWeight="Bold" FontSize="16" Margin="10,0"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0" Content="←" Width="40" Height="175" Click="ScrollLeft_Porzucone"/>
                                <ScrollViewer x:Name="PorzuconeScrollViewer" Grid.Column="1"
                                  HorizontalScrollBarVisibility="Hidden" PreviewMouseWheel="HorizontalScrollViewer_PreviewMouseWheel"
                                  VerticalScrollBarVisibility="Disabled">
                                    <ItemsControl x:Name="PorzuconeControl"
                                      ItemTemplate="{StaticResource KsiazkaTemplate}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </ScrollViewer>
                                <Button Grid.Column="2" Content="→" Width="40" Height="175" Click="ScrollRight_Porzucone"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Mój Profil" Width="174" >
                <Grid Background="#FFE5E5E5">
                    <Button Content="Wyloguj" HorizontalAlignment="Left" Margin="593,32,0,0" VerticalAlignment="Top" Click="WylogujKlikniete" Height="35" Width="91"/>
                    <TextBlock x:Name="NickText" HorizontalAlignment="Left" Margin="29,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="36"><Run Language="pl-pl" Text="Nick"/></TextBlock>
                    <TextBlock x:Name="EmailText" HorizontalAlignment="Left" Margin="29,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22"><Run Language="pl-pl" Text="E-mail"/></TextBlock>
                    <TextBlock x:Name="DataDodText" HorizontalAlignment="Left" Margin="389,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22"><Run Text="Data Dołączenia"/><Run Language="pl-pl" Text=": "/></TextBlock>
                    <TextBlock x:Name="PlecText" HorizontalAlignment="Left" Margin="40,151,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="pl-pl" Text="Płeć:"/></TextBlock>
                    <ComboBox x:Name="PlecComboBox" HorizontalAlignment="Left" Margin="427,39,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="2" SelectionChanged="ProceduraZmiantPlci_Click">
                        <ComboBoxItem Content="Mężczyzna" />
                        <ComboBoxItem Content="Kobieta" />
                        <ComboBoxItem Content="Brak" />
                    </ComboBox>
                    <TextBlock HorizontalAlignment="Left" Margin="427,18,0,0" TextWrapping="Wrap" Text="Płeć" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
        </TabControl>


    </Grid>
</UserControl>
